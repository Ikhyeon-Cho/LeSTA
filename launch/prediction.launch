<launch>

  <!-- Terrain feature extraction -->
  <include file="$(find traversability_learning)/launch/include/feature_extraction.launch" />

  <!-- Traversability prediction -->
  <node pkg="traversability_learning" type="traversability_prediction_node" name="traversability_prediction"
    output="screen">
    <rosparam file="$(find traversability_learning)/config/traversability/params.yaml" command="load" />
  </node>

  <!-- Traversability visualization -->
  <node pkg="grid_map_visualization" type="grid_map_visualization" name="traversability_visualization" output="screen">
    <rosparam file="$(find traversability_learning)/config/traversability/visualization.yaml" />
  </node>

</launch>